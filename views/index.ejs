
<%-  include("./partials/header") %>

<nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Todo App</a>
    </div>
  </nav>
    <div class="container mt-5">
        <form action="/add/todo" method="post" class="d-flex">
            <input type="text" name="todo" class="form-control" placeholder="Enter Todo">
           <button type="submit" class="btn btn-sm btn-primary">Add Todo</button>
        </form>

        <ul class="list-group my-5">

          <% todo.forEach(todos=>{ %>
            <li class="list-group-item"><%= todos.todo  %><a href="delete/todo/<%= todos.id %>" class="btn btn-danger btn-sm">Delete</a></li>
            
         <% }) %>
          
        </ul>
    </div>
<%- include("./partials/footer") %>